# ============================================
# SeasonDEX Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Note: All variables prefixed with VITE_ are exposed to the client

# ============================================
# ETHEREUM / EVM CONFIGURATION
# ============================================

# Ethereum RPC URL (optional - uses MetaMask's provider by default)
# Get free API keys from:
# - Infura: https://infura.io/
# - Alchemy: https://www.alchemy.com/
# - QuickNode: https://www.quicknode.com/
VITE_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
# VITE_ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Ethereum Chain ID
# 1 = Mainnet, 5 = Goerli, 11155111 = Sepolia
VITE_ETHEREUM_CHAIN_ID=1

# Uniswap V2 Router Address (default is mainnet)
VITE_UNISWAP_V2_ROUTER=0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D

# ============================================
# SOLANA CONFIGURATION
# ============================================

# Solana RPC URL (optional - uses public endpoint by default)
# Public endpoints (free but rate-limited):
# - Mainnet: https://api.mainnet-beta.solana.com
# - Devnet: https://api.devnet.solana.com
# - Testnet: https://api.testnet.solana.com
#
# Premium endpoints (faster, higher limits):
# - Helius: https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
# - QuickNode: https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY/
# - Alchemy: https://solana-mainnet.g.alchemy.com/v2/YOUR_KEY
VITE_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Solana Network
# mainnet-beta, devnet, testnet
VITE_SOLANA_NETWORK=mainnet-beta

# Solana Commitment Level
# processed, confirmed, finalized
VITE_SOLANA_COMMITMENT=confirmed

# ============================================
# DEX API ENDPOINTS
# ============================================

# Jupiter Aggregator API (Solana swaps)
# v6 is the latest version
VITE_JUPITER_API_URL=https://quote-api.jup.ag/v6

# Jupiter Price API (token prices)
VITE_JUPITER_PRICE_API_URL=https://price.jup.ag/v4

# Raydium API (pool information)
# Note: Raydium doesn't have an official public API yet
# You may need to fetch pool data from their GitHub or use on-chain data
VITE_RAYDIUM_API_URL=https://api.raydium.io/v2

# Orca API (pool information)
VITE_ORCA_API_URL=https://api.orca.so

# ============================================
# TESTING & DEVELOPMENT
# ============================================

# Enable testnet mode (uses Goerli/Sepolia for Ethereum, Devnet for Solana)
VITE_ENABLE_TESTNET=false

# Enable debug logging
VITE_DEBUG_MODE=false

# Enable transaction simulation before execution
VITE_ENABLE_TX_SIMULATION=true

# Default slippage tolerance (percentage)
VITE_DEFAULT_SLIPPAGE=0.5

# Transaction deadline (minutes)
VITE_TX_DEADLINE_MINUTES=20

# ============================================
# OPTIONAL: ANALYTICS & MONITORING
# ============================================

# Enable analytics
VITE_ENABLE_ANALYTICS=false

# Google Analytics ID (optional)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking (optional)
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================
# OPTIONAL: PRICE FEEDS
# ============================================

# CoinGecko API (for token prices)
# Free tier: 10-50 calls/minute
# VITE_COINGECKO_API_URL=https://api.coingecko.com/api/v3
# VITE_COINGECKO_API_KEY=YOUR_API_KEY

# CoinMarketCap API (alternative price feed)
# VITE_CMC_API_URL=https://pro-api.coinmarketcap.com/v1
# VITE_CMC_API_KEY=YOUR_API_KEY

# ============================================
# OPTIONAL: WALLET CONNECT
# ============================================

# WalletConnect Project ID (for mobile wallet support)
# Get one at: https://cloud.walletconnect.com/
# VITE_WALLETCONNECT_PROJECT_ID=YOUR_PROJECT_ID

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable specific features
VITE_ENABLE_SWAPS=true
VITE_ENABLE_LIQUIDITY=true
VITE_ENABLE_SEASONAL_ANIMATIONS=true
VITE_ENABLE_THEME_CONTROLS=true

# ============================================
# NOTES FOR TESTING
# ============================================
#
# MAINNET TESTING (Real Money):
# - Use small amounts for testing
# - Double-check all addresses
# - Verify transactions before confirming
#
# TESTNET TESTING (Free Test Tokens):
# 1. Set VITE_ENABLE_TESTNET=true
# 2. Get test ETH from faucets:
#    - Goerli: https://goerlifaucet.com/
#    - Sepolia: https://sepoliafaucet.com/
# 3. Get test SOL from faucets:
#    - Devnet: https://solfaucet.com/
#
# RECOMMENDED SETUP FOR DEVELOPMENT:
# 1. Use testnet first (VITE_ENABLE_TESTNET=true)
# 2. Get free RPC endpoints from Infura/Alchemy
# 3. Enable debug mode (VITE_DEBUG_MODE=true)
# 4. Enable transaction simulation (VITE_ENABLE_TX_SIMULATION=true)
#
# RECOMMENDED SETUP FOR PRODUCTION:
# 1. Use mainnet (VITE_ENABLE_TESTNET=false)
# 2. Use premium RPC endpoints for better performance
# 3. Disable debug mode (VITE_DEBUG_MODE=false)
# 4. Enable analytics (VITE_ENABLE_ANALYTICS=true)
# 5. Set up error tracking with Sentry
#
# ============================================
